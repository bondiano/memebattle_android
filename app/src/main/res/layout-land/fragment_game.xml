<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rules_fragment_back">

    <ProgressBar
        android:id="@+id/game_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:indeterminate="false"
        android:max="15"
        android:progress="1"
        android:progressTint="@color/main_blue"
        app:layout_constraintBottom_toBottomOf="@+id/battle_clockim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/battle_clockim"
        app:layout_constraintTop_toTopOf="@+id/battle_clockim" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/battle_clockim">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constraintLayout2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button2"
            app:layout_constraintVertical_bias="0.6">

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center"
                android:stretchColumns="*"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/game_top_share"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_sharing_big_symbol"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Поделиться"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/game_top_download"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_download"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Скачать"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/game_top_zoom"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_zoom_in"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Увеличить"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/game_top_prooral"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_laughing"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Проорал"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>
                </TableRow>

            </TableLayout>

            <ImageView
                android:id="@+id/game_top_like"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/game_top_mem"
                app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toTopOf="@+id/game_top_mem"
                app:srcCompat="@drawable/like" />

            <RelativeLayout
                android:id="@+id/game_top_after_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/back_likes"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/game_top_mem"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/game_top_mem">

                <com.membattle.presentation.custom.widget_plus.TextViewPlus
                    android:id="@+id/game_top_after_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Победитель"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:customFont="@string/font_main" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/game_top_after_status"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <com.membattle.presentation.custom.widget_plus.TextViewPlus
                        android:id="@+id/game_top_after_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:text="33"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        app:customFont="@string/font_main" />

                    <ImageView
                        android:id="@+id/battle_imlikef"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/like_small" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/game_top_mem"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/meme1" />
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TableLayout
                android:id="@+id/tableLayout2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:stretchColumns="*"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/game_bottom_share"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_sharing_big_symbol"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Поделиться"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/game_bottom_download"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_download"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Скачать"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/game_bottom_zoom"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_zoom_in"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Увеличить"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/game_bottom_prooral"
                        android:layout_width="wrap_content"

                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:padding="5dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:srcCompat="@drawable/ic_laughing"
                            tools:layout_editor_absoluteX="16dp" />

                        <com.membattle.presentation.custom.widget_plus.TextViewPlus
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Проорал"
                            android:textColor="@color/main_blue"
                            android:textSize="18sp"
                            app:customFont="@string/font_main" />
                    </LinearLayout>

                </TableRow>

            </TableLayout>

            <ImageView
                android:id="@+id/game_bottom_like"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="@+id/game_bottom_mem"
                app:layout_constraintEnd_toEndOf="@+id/game_bottom_mem"
                app:layout_constraintStart_toStartOf="@+id/game_bottom_mem"
                app:layout_constraintTop_toTopOf="@+id/game_bottom_mem"
                app:srcCompat="@drawable/like" />

            <RelativeLayout
                android:id="@+id/game_bottom_after_layout"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"

                android:layout_alignParentTop="true"
                android:background="@color/back_likes"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
                app:layout_constraintEnd_toEndOf="@+id/game_bottom_mem"
                app:layout_constraintStart_toStartOf="@+id/game_bottom_mem"
                app:layout_constraintTop_toTopOf="@+id/game_bottom_mem">

                <com.membattle.presentation.custom.widget_plus.TextViewPlus
                    android:id="@+id/game_bottom_after_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Победитель"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    app:customFont="@string/font_main" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/game_bottom_after_status"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    android:orientation="horizontal">

                    <com.membattle.presentation.custom.widget_plus.TextViewPlus
                        android:id="@+id/game_bottom_after_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:text="33"
                        android:textColor="@android:color/white"
                        android:textSize="24sp"
                        app:customFont="@string/font_main" />

                    <ImageView
                        android:id="@+id/battle_imlikes"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/like_small" />
                </LinearLayout>

            </RelativeLayout>

            <ImageView
                android:id="@+id/game_bottom_mem"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/meme2" />
        </android.support.constraint.ConstraintLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/battle_clockim"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_clock" />

</android.support.constraint.ConstraintLayout>