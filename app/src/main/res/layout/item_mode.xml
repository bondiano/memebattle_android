<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:theme="@style/AppTheme">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <com.membattle.presentation.widget_plus.TextViewPlus
            android:id="@+id/item_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="ПРАВИЛА"
            android:textColor="@color/main_blue"
            android:textSize="24sp"
            card_view:customFont="@string/font_main"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toStartOf="@+id/item_play"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/item_image"
            card_view:layout_constraintVertical_bias="0.515" />

        <com.membattle.presentation.widget_plus.TextViewPlus
            android:id="@+id/item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_rules"
            android:layout_alignBottom="@+id/item_rules"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="ИГРАТЬ"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/main_blue"
            android:textSize="24sp"
            card_view:customFont="@string/font_main"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="0.5"
            card_view:layout_constraintStart_toEndOf="@+id/item_rules"
            card_view:layout_constraintTop_toBottomOf="@+id/item_image"
            card_view:layout_constraintVertical_bias="0.515" />

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/new_frame"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <com.membattle.presentation.widget_plus.TextViewPlus
            android:id="@+id/item_text_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            card_view:customFont="@string/font_main" />

        <com.membattle.presentation.widget_plus.TextViewPlus
            android:id="@+id/item_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="8dp"
            android:text="Название какой-то дичи"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/main_blue"
            android:textSize="27sp"
            card_view:customFont="@string/font_main"
            card_view:layout_constraintBottom_toBottomOf="@+id/item_image"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintRight_toRightOf="parent"
            tools:text="Бесконечный батл" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>