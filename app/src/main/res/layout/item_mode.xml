<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/frame">

    <ImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingTop="1dp" />

    <com.membattle.presentation.widget_plus.TextViewPlus
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="Название какой-то дичи"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/main_blue"
        android:textSize="27sp"
        card_view:customFont="@string/font_main"
        tools:text="Бесконечный батл" />

    <com.membattle.presentation.widget_plus.TextViewPlus
        android:id="@+id/item_text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        card_view:customFont="@string/font_main"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@android:color/white"
        android:textSize="30sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/item_title"
        android:layout_centerHorizontal="true">

        <com.membattle.presentation.widget_plus.TextViewPlus
            android:id="@+id/item_rules"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            android:text="ПРАВИЛА"
            card_view:customFont="@string/font_main"
            android:textColor="@color/main_blue"
            android:textSize="24sp"/>

        <com.membattle.presentation.widget_plus.TextViewPlus
            android:id="@+id/item_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/item_rules"
            android:layout_alignBottom="@+id/item_rules"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="42dp"
            android:layout_marginRight="42dp"
            card_view:customFont="@string/font_main"
            android:text="ИГРАТЬ"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/main_blue"
            android:textSize="24sp"/>
    </RelativeLayout>

</RelativeLayout>